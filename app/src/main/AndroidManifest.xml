<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.jaky.myreader">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.jaky.mupdf.ui.activity.MuPDFActivity"
            android:theme="@style/AppReaderTheme"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="com.jaky.mupdf.ui.activity.PrintDialogActivity"
            android:theme="@style/AppReaderTheme"
            android:label="@string/print">
        </activity>
        <activity
            android:name="com.jaky.mupdf.ui.activity.PDFPreviewGridActivity"
            android:theme="@style/AppReaderTheme"
            android:label="preview label">
        </activity>
    </application>

</manifest>